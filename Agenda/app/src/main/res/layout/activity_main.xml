<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vmcculloch.agenda.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <Button
            android:text="Calendar"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:id="@+id/calButton"
            android:textColor="#FFF"
            android:layout_centerVertical=""
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#E37225"

            />


        <Button
            android:text="Global List"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:id="@+id/globalButton"
            android:textColor="#FFF"
            android:layout_below="@+id/calButton"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#E37225"

            />

        <Button
            android:text="Local List"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:id="@+id/localButton"
            android:textColor="#FFF"
            android:layout_below="@+id/globalButton"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#E37225"

            />



    </RelativeLayout>



</android.support.constraint.ConstraintLayout>
