<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="com.vmcculloch.agenda.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout




        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"

        >


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/blue"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="30dp"
            android:id="@+id/imageView3" />

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"


                >


                <Button
                    android:text="Calendar"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_marginRight="17dp"



                    android:id="@+id/calButton"
                    android:textColor="#FFF"
                    android:background="#ff1f1f"


                    />




                <Button
                    android:text="Local List"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:id="@+id/localButton"
                    android:layout_marginLeft="17dp"

                    android:textColor="#FFF"

                    android:background="#3eda4e"


                    />




            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                >



                <Button
                    android:text="Global List"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:id="@+id/globalButton"
                    android:textColor="#FFF"
                    android:layout_marginRight="17dp"


                    android:background="#40d3fc"


                    />


                <Button
                    android:text="Settings"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:id="@+id/settingsButton"
                    android:textColor="#FFF"
                    android:layout_marginLeft="17dp"


                    android:background="#ffe91f"
                    />


                </TableRow>







        </TableLayout>


    </LinearLayout>



</android.support.constraint.ConstraintLayout>
